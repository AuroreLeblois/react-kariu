{
  "name": "react-kariu",
  "private": false,
  "version": "0.1.0",
  "description": "react library for devs",
  "author": "Aurore Leblois",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "types",
    "*.js",
    "*.d.ts",
    "*.md"
  ],
  "keywords": [
    "react",
    "ui",
    "components",
    "effects"
  ],
  "publishConfig": {
    "@auroreleblois:react-kariu": "https://npm.pkg.github.com"
  },
  "copyright": "Copyright Â© year ${author}",
  "scripts": {
    "build_tsc": "tsc",
    "clean": "rimraf dist/",
    "copy": "copyfiles -u 1 src/**/*.css dist/",
    "build": "npm run clean && tsc && npm run copy",
    "start": "start http://localhost:9999 && storybook dev --quiet --ci --port 9999",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --project-token=CHROMATIC_TOKEN"
  },
  "exports": {
    ".": {
      "default": {
        "require": "./dist/index.js",
        "default": "./dist/index.js"
      }
    }
  },
  "dependencies": {
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.4",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-url": "^8.0.2",
    "@storybook/addons": "^7.6.17",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-typescript": "^7.24.4",
    "@chromatic-com/storybook": "^1.3.3",
    "@storybook/addon-essentials": "^8.0.8",
    "@storybook/addon-interactions": "^8.0.8",
    "@storybook/addon-links": "^8.0.8",
    "@storybook/addon-onboarding": "^8.0.8",
    "@storybook/blocks": "^8.0.8",
    "@storybook/manager-api": "^8.1.10",
    "@storybook/react": "^8.0.8",
    "@storybook/react-vite": "^8.0.8",
    "@storybook/test": "^8.0.8",
    "@storybook/theming": "^8.1.10",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "chromatic": "^11.3.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "eslint-plugin-storybook": "^0.8.0",
    "rimraf": "^5.0.7",
    "storybook": "^8.0.8",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2"
  },
  "license": "ISC"
}
